[user]
	name = Davy Landman
	email = davy.landman@gmail.com
[color]
	branch = auto
	diff = auto
	status = auto
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	#meta = yellow bold
	#frag = magenta bold
	#old = red bold
	#new = green bold
	#whitespace = red reverse
	meta = blue
	frag = magenta bold
	old = red
	new = green
	whitespace = red reverse
	commit = yellow reverse
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[core]
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	pager = less -SR
	autocrlf = input
	excludesfile = ~/dotfiles/global.gitignore
	preloadindex = true
	fscache = true
[alias]
	st = status
	ci = commit
	cii = commit --interactive
	cia = commit -a
	br = branch
	co = checkout
	df = diff
	dfw = diff --word-diff
	lg = log -p
	lgs = log --pretty=format:'%Cred%h%Creset -%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	lgw = log -p --word-diff
[branch]
#   tells git-branch and git-checkout to setup new branches so that git-pull(1)
#   will appropriately merge from that remote branch.  Recommended.  Without this,
#   you will have to add --track to your branch command or manually merge remote
#   tracking branches with "fetch" and then "merge".
	autosetupmerge = true
[push]
	default = upstream
	followTags = true
[pull]
	rebase = preserve
[merge]
	tool = vimdiff
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[gc]
	auto = 256
[include]
    path = ~/.gitconfig.local
